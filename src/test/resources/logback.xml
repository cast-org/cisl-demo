<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="false">
  <appender name="Stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{HH:mm:ss} %-5level %logger{36} %msg%n</pattern>
    </encoder>
  </appender> 

  <logger name="org.cast" level="INFO"/>
  <logger name="org.apache.wicket.util.tester.BaseWicketTester" level="DEBUG"/>
  <logger name="org.hibernate.tool.hbm2ddl.SchemaExport" level="DEBUG"/>

  <root level="WARN">
    <appender-ref ref="Stdout"/>
  </root>

</configuration>
